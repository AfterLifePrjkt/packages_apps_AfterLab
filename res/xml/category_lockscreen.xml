<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/category_lockscreen_title" >

     <!-- General -->
     <Preference
        android:key="lockscreen_preview"
        settings:layout="@layout/lockscreen_preview" />
        
     <PreferenceCategory
        android:title="Custom Lockscreen Clock">
        	
        <com.afterlife.support.preference.SecureSettingSwitchPreference
            android:key="clock_ls"
            android:title="Use Costum Lockscreen Clock"
            android:summary="use custom lockscreen clock instead of default clock"
            android:defaultValue="false"
            settings:layout="@layout/afterlab_card_preference_top" />
            
        <com.afterlife.support.preference.SystemSettingListPreference
            android:entries="@array/clock_style_entries"
            android:title="Custom Clock style"
            android:key="clock_style"
            android:defaultValue="0"
            android:dependency="clock_ls"
            android:entryValues="@array/clock_style_values" 
            settings:layout="@layout/afterlab_card_preference_middle" />

        <com.afterlife.support.preference.SystemSettingSwitchPreference
            android:title="Lockscreen Profile Picture"
            android:key="qs_footer_avatar_show"
            android:dependency="clock_ls"
            android:summary="Enable profile image for ls Clock Custom 2"
            android:defaultValue="false" 
            settings:layout="@layout/afterlab_card_preference_middle" />

        <Preference
            android:title="Select Profil Image"
            android:key="declan_avatar_picker_uri"
            android:dependency="qs_footer_avatar_show"
            android:summary="Do not use Google photos for pick image avatar!"
            android:persistent="false" 
            settings:layout="@layout/afterlab_card_preference_middle" />

        <com.afterlife.support.preference.SystemSettingSwitchPreference
            android:title="LockScreen Username"
            android:key="qs_footer_text_show"
            android:dependency="clock_ls"
            android:summary="Display username at Ls Clock Custom 2"
            android:defaultValue="false" 
            settings:layout="@layout/afterlab_card_preference_middle" />

        <com.afterlife.support.preference.SystemSettingEditTextPreference
            android:title="Customize Username"
            android:key="qs_footer_text_string"
            android:summary="Switch to back default"
            android:dependency="qs_footer_text_show"
            android:defaultValue="\#KeepAfterLife" 
            settings:layout="@layout/afterlab_card_preference_middle" />
            
        <com.afterlife.support.preference.SecureSettingSwitchPreference
            android:key="lockscreen_double_line_clock_switch"
            android:title="@string/lockscreen_double_line_clock_setting_toggle"
            android:summary="@string/lockscreen_double_line_clock_summary"
            android:defaultValue="true" 
            settings:layout="@layout/afterlab_card_preference_bottom" />
            
     </PreferenceCategory>
            
     <PreferenceCategory
        android:title="@string/general_category">

      <com.afterlife.support.preference.SystemSettingListPreference
         android:key="screen_off_animation"
         android:title="@string/screen_off_animation_title"
         android:entries="@array/screen_off_animation_entries"
         android:entryValues="@array/screen_off_animation_values"
         android:summary="%s"
         android:defaultValue="0"
         settings:layout="@layout/afterlab_card_preference_top" />
			
	  <Preference
		 android:key="always_on_display_schedule"
		 android:title="@string/always_on_display_schedule_title"
		 android:fragment="com.afterlife.afterlab.fragments.AODSchedule"
         settings:layout="@layout/afterlab_card_preference_middle" />
    
      <com.afterlife.support.preference.SystemSettingSwitchPreference
         android:key="ambient_wake_gestures"
         android:title="@string/ambient_wake_gestures_title"
         android:summary="@string/ambient_wake_gestures_summary"
         android:defaultValue="false"
         settings:layout="@layout/afterlab_card_preference_middle" />

      <com.afterlife.support.preference.SystemSettingSwitchPreference
         android:key="double_tap_sleep_lockscreen"
         android:title="@string/double_tap_to_sleep_lockscreen_title"
         android:summary="@string/double_tap_to_sleep_lockscreen_summary"
         android:defaultValue="false"
         settings:layout="@layout/afterlab_card_preference_middle"/>

      <com.afterlife.support.preference.GlobalSettingSwitchPreference
         android:key="wake_when_plugged_or_unplugged"
         android:title="@string/wake_when_plugged_or_unplugged_title"
         android:summary="@string/wake_when_plugged_or_unplugged_summary"
         android:defaultValue="@*android:bool/config_unplugTurnsOnScreen"
         settings:layout="@layout/afterlab_card_preference_bottom" />

      </PreferenceCategory>

      <!-- Fingerprint -->
    <PreferenceCategory
        android:key="lockscreen_ui_finterprint_category"
        android:title="@string/fingerprint_category">

        <SwitchPreference
            android:key="fingerprint_success_vib"
            android:title="@string/fprint_success_vib_title"
            android:summary="@string/fprint_success_vib_summary"
            android:persistent="true"
            settings:layout="@layout/afterlab_card_preference_top" />

        <SwitchPreference
            android:key="fingerprint_error_vib"
            android:title="@string/fprint_error_vib_title"
            android:summary="@string/fprint_error_vib_summary"
            android:persistent="true"
            settings:layout="@layout/afterlab_card_preference_middle" />

        <com.afterlife.support.preference.SystemSettingSwitchPreference
            android:key="enable_ripple_effect"
            android:title="@string/enable_fingerprint_ripple_effect_title"
            android:summary="@string/enable_fingerprint_ripple_effect_summary"
            android:defaultValue="true"
            settings:layout="@layout/afterlab_card_preference_bottom" />

    </PreferenceCategory>
     
     <!-- Media Cover Art -->
     <PreferenceCategory
        android:key="lockscreen_media_art_options"
        android:title="Misc">

         <!-- Charging animation -->
        <com.afterlife.support.preference.SystemSettingSwitchPreference
            android:key="charging_animation"
            android:title="@string/charging_animation_title"
            android:summary="@string/charging_animation_summary"
            android:defaultValue="true"
            settings:layout="@layout/afterlab_card_preference_top" />

        <com.afterlife.support.preference.SecureSettingSwitchPreference
            android:key="lockscreen_media_metadata"
            android:title="@string/media_art_title"
            android:summary="@string/media_art_summary"
            android:defaultValue="false"
            settings:layout="@layout/afterlab_card_preference_middle" />

         <com.afterlife.support.preference.SystemSettingSwitchPreference
            android:key="lockscreen_power_menu_disabled"
            android:title="@string/lockscreen_power_menu_disabled_title"
            android:summary="@string/lockscreen_power_menu_disabled_summary"
            android:defaultValue="true"
            settings:layout="@layout/afterlab_card_preference_bottom" /> 

    </PreferenceCategory>

</PreferenceScreen>
