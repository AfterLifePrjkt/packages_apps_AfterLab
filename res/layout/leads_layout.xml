<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="105dp"
    android:layout_marginEnd="15dp"
    android:paddingTop="5dp"
    android:id="@+id/leads_base"
    android:paddingBottom="5dp">

    <androidx.cardview.widget.CardView
        android:gravity="center" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent" 
        android:paddingStart="4.0dip" 
        android:paddingEnd="4.0dip" 
        app:cardBackgroundColor="@color/bg_card" 
        app:cardCornerRadius="26.0dip" 
		app:cardElevation="0.0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="95dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/devName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/devTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/devDescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorPrimary" />


            <TextView
                android:id="@+id/no_wa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/akun_tele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/akun_ig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/akun_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <com.afterlife.afterlab.fragments.team.helper.CircularImageView
            android:id="@+id/devImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            app:civ_border="true"
            app:civ_border_color="@*android:color/accent_device_default_light"
            app:civ_border_width="0.5dp" />

    </androidx.cardview.widget.CardView>

</FrameLayout>
