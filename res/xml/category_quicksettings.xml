<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/category_quicksettings_title" >

    <PreferenceCategory
        android:title="@string/general_category">

        <com.afterlife.support.preference.SystemSettingSwitchPreference
            android:key="qs_colored_icons"
            android:title="@string/qs_colored_icons_title"
            android:summary="@string/qs_colored_icons_summary"
            android:defaultValue="false"
            settings:layout="@layout/afterlab_card_preference_single" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Footers Style">

        <com.afterlife.support.preference.SystemSettingSwitchPreference
            android:title="Footer Profile Picture"
            android:key="qs_footer_avatar_show"
            android:summary="Enable to show qs footer profile image"
            android:defaultValue="false"
            settings:layout="@layout/afterlab_card_preference_top" />
        <Preference
            android:title="Select Avatar Image"
            android:key="declan_avatar_picker_uri"
            android:dependency="qs_footer_avatar_show"
            android:summary="Select image from storage"
            android:persistent="false"
            settings:layout="@layout/afterlab_card_preference_middle" />

        <com.afterlife.support.preference.SystemSettingSwitchPreference
            android:title="QS Footer Username"
            android:key="qs_footer_text_show"
            android:summary="Display username at bottom of QS panel"
            android:defaultValue="false"
            settings:layout="@layout/afterlab_card_preference_middle" />

        <com.afterlife.support.preference.SystemSettingEditTextPreference
            android:title="Customize footer text"
            android:key="qs_footer_text_string"
            android:summary="Switch to back default"
            android:dependency="qs_footer_text_show"
            android:defaultValue="\#KeepAfterLife"
            settings:layout="@layout/afterlab_card_preference_bottom" />

        <com.android.settingslib.widget.FooterPreference 
            android:title="Do not use Google photos for pick image avatar!" 
            android:selectable="false" />

        </PreferenceCategory>

        <PreferenceCategory
        android:title="Quick Settings Style">

        <com.afterlife.support.preference.SystemSettingSwitchPreference
            android:title="Enable Time Header Image"
            android:key="header_image"
            android:summary="Enable to show header image"
            android:defaultValue="false"
            settings:layout="@layout/afterlab_card_preference_top" />

        <com.afterlife.support.preference.SecureSettingListPreference
            android:key="qs_tile_shape"
            android:title="@string/qs_tile_shape"
            android:entries="@array/qs_tile_shape_entries"
            android:entryValues="@array/qs_tile_shape_values"
            android:defaultValue="2" 
            settings:layout="@layout/afterlab_card_preference_middle"/>

        <com.afterlife.support.preference.SystemSettingSwitchPreference
            android:key="qs_dual_tone"
            android:title="@string/qs_dual_tone_title"
            android:summary="@string/qs_dual_tone_summary"
            android:defaultValue="false" 
            settings:layout="@layout/afterlab_card_preference_bottom"/>

        <com.afterlife.support.preference.SystemSettingSeekBarPreference
            android:key="qs_transparency"
            android:title="@string/qs_transparency_title"
            android:summary="@string/qs_transparency_summary"
            android:defaultValue="100"
            settings:interval="1"
            settings:units="%"
            android:max="100"
            android:min="1" 
            settings:layout="@layout/preference_custom_seekbar"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="quick_settings_brighness_category"
        android:title="@string/qs_show_brightness_slider_title">

	    <com.afterlife.support.preference.SecureSettingListPreference
            android:key="qs_show_brightness_slider"
            android:title="@string/qs_show_brightness_slider_title"
            android:entries="@array/qs_show_brightness_slider_entries"
            android:entryValues="@array/qs_show_brightness_slider_values"
            android:defaultValue="3"
            settings:layout="@layout/afterlab_card_preference_top" />

        <com.afterlife.support.preference.SecureSettingListPreference
            android:key="qs_brightness_slider_position"
            android:title="@string/qs_brightness_slider_position_title"
            android:entries="@array/qs_brightness_slider_position_entries"
            android:entryValues="@array/qs_brightness_slider_position_values"
            android:defaultValue="2"
            settings:layout="@layout/afterlab_card_preference_middle" />

        <com.afterlife.support.preference.SecureSettingSwitchPreference
            android:key="qs_show_auto_brightness"
            android:title="@string/qs_show_auto_brightness_title"
            android:summary="@string/qs_show_auto_brightness_summary"
            android:defaultValue="true"
            settings:layout="@layout/afterlab_card_preference_bottom" />

    </PreferenceCategory>
    
    <PreferenceCategory
      android:title="@string/qs_tile_animation_category_title">

        <com.afterlife.support.preference.SystemSettingListPreference
            android:key="qs_tile_animation_style"
            android:title="@string/qs_tile_animation_style_title"
            android:entries="@array/qs_tile_animation_style_entries"
            android:entryValues="@array/qs_tile_animation_style_values"
            android:summary="%s"
            android:defaultValue="0"
            settings:layout="@layout/afterlab_card_preference_top" />

        <com.afterlife.support.preference.SystemSettingListPreference
            android:key="qs_tile_animation_interpolator"
            android:title="@string/qs_tile_animation_interpolator_title"
            android:entries="@array/qs_tile_animation_interpolator_entries"
            android:entryValues="@array/qs_tile_animation_interpolator_values"
            android:summary="%s"
            android:defaultValue="0"
            settings:layout="@layout/afterlab_card_preference_bottom" />
        
        <com.afterlife.support.preference.SystemSettingSeekBarPreference
            android:key="qs_tile_animation_duration"
            android:title="@string/qs_tile_animation_duration_title"
            android:defaultValue="1"
            settings:interval="1"
            settings:units="@string/unit_seconds"
            android:max="5"
            android:min="1"
            settings:layout="@layout/preference_custom_seekbar" />

    </PreferenceCategory>
    
</PreferenceScreen>