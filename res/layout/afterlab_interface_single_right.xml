<LinearLayout 
    android:orientation="vertical" 
    android:background="@drawable/card_background" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_marginStart="5.0dip" 
    android:layout_marginEnd="16.0dip" 
    android:backgroundTint="@color/card_bg" 
    android:layout_marginVertical="10.0dip" 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout 
        android:gravity="center_horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:paddingHorizontal="16.0dip" 
        android:paddingVertical="16.0dip">

        <androidx.preference.internal.PreferenceImageView 
            android:layout_gravity="center" 
            android:id="@android:id/icon" 
            android:background="@drawable/adaptive_icon_shape" 
            android:padding="8.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:tint="@color/icon_tint1" 
            android:layout_marginEnd="5.0dip" 
            android:backgroundTint="@color/icon_tint" />

    </LinearLayout>

    <androidx.cardview.widget.CardView 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginBottom="5.0dip" 
        android:layout_marginHorizontal="5.0dip" 
        android:elevation="0.0dip"
        app:cardCornerRadius="@*android:dimen/config_dialogCornerRadius"
        app:cardBackgroundColor="@color/card_fg" 
        app:cardMaxElevation="0.0dip" 
        app:cardElevation="0.0dip" 
        app:rippleColor="@android:color/system_accent1_50">

        <LinearLayout 
            android:orientation="vertical" 
            android:paddingBottom="10.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:paddingHorizontal="16.0dip">

            <TextView 
                android:textSize="18.0dip" 
                android:textStyle="bold" 
                android:textColor="@color/text_tint" 
                android:layout_gravity="center_horizontal" 
                android:id="@android:id/title" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginTop="10.0dip" 
                android:layout_marginBottom="5.0dip" 
                android:singleLine="true" />

            <TextView 
                android:textSize="12.0dip" 
                android:textColor="?android:textColorSecondary" 
                android:layout_gravity="center_horizontal" 
                android:id="@android:id/summary" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:textAlignment="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    
</LinearLayout>